<body>
    <div class="container">
        <div class="header">
            <h1>üì± Garcia Transportes - Telegram Bot</h1>
            <p>Visualizador de Mensagens e Chat IDs</p>
        </div>

        <div class="controls">
            <button class="btn" onclick="loadMessages()">üîÑ Atualizar Mensagens</button>
            <div class="status" id="status">Clique em "Atualizar" para carregar mensagens</div>
        </div>

        <div class="messages-container" id="messagesContainer">
            <div class="no-messages">
                <h2>üëã Bem-vindo!</h2>
                <p>Clique no bot√£o "Atualizar Mensagens" acima para carregar as mensagens recebidas pelo bot.<br><br>
                <strong>Como usar:</strong><br>
                1. Clique em "Atualizar Mensagens"<br>
                2. Veja as mensagens organizadas<br>
                3. Clique no Chat ID para copiar automaticamente</p>
            </div>
        </div>
    </div>

    <div class="toast" id="toast">Chat ID copiado! ‚úì</div>

    <script>
        const BOT_TOKEN = '8475646578:AAE72zdL4U0HZ73LrzEcNHltXSDbB5umT_M';
        const API_URL = `https://api.telegram.org/bot${BOT_TOKEN}/getUpdates`;

        async function loadMessages() {
            const statusEl = document.getElementById('status');
            const containerEl = document.getElementById('messagesContainer');

            // Mostra status de carregamento
            statusEl.textContent = '‚è≥ Carregando mensagens...';
            statusEl.className = 'status loading';

            try {
                const response = await fetch(API_URL);
                const data = await response.json();

                if (!data.ok) {
                    throw new Error('Erro ao buscar mensagens');
                }

                const messages = data.result;

                if (messages.length === 0) {
                    containerEl.innerHTML = `
                        <div class="no-messages">
                            <h2>üì≠ Nenhuma mensagem encontrada</h2>
                            <p>Ainda n√£o h√° mensagens recebidas pelo bot.<br><br>
                            Pe√ßa para um motorista enviar uma mensagem "Oi" para o bot <strong>@Garciatransporte2025_bot</strong> no Telegram.</p>
                        </div>
                    `;
                    statusEl.textContent = '‚úì Nenhuma mensagem encontrada';
                    statusEl.className = 'status success';
                    return;
                }

                // Renderiza mensagens
                containerEl.innerHTML = messages.map(msg => {
                    const message = msg.message || {};
                    const from = message.from || {};
                    const chatId = message.chat?.id || 'N/A';
                    const firstName = from.first_name || 'Usu√°rio';
                    const lastName = from.last_name || '';
                    const username = from.username ? `@${from.username}` : '';
                    const text = message.text || '(sem texto)';
                    const date = message.date ? new Date(message.date * 1000).toLocaleString('pt-BR') : 'N/A';
                    const initials = (firstName.charAt(0) + (lastName.charAt(0) || '')).toUpperCase();

                    return `
                        <div class="message-card">
                            <div class="message-header">
                                <div class="user-info">
                                    <div class="user-avatar">${initials}</div>
                                    <div class="user-details">
                                        <h3>${firstName} ${lastName}</h3>
                                        <p>${username || 'Sem username'}</p>
                                    </div>
                                </div>
                                <div class="chat-id-badge" onclick="copyToClipboard('${chatId}')" title="Clique para copiar">
                                    <svg class="copy-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                    </svg>
                                    Chat ID: ${chatId}
                                </div>
                            </div>
                            <div class="message-content">
                                <div class="message-text">${text}</div>
                            </div>
                            <div class="message-meta">
                                <span>üìÖ ${date}</span>
                                <span>Update ID: ${msg.update_id}</span>
                            </div>
                        </div>
                    `;
                }).join('');

                statusEl.textContent = `‚úì ${messages.length} mensagem${messages.length > 1 ? 's' : ''} carregada${messages.length > 1 ? 's' : ''}`;
                statusEl.className = 'status success';

            } catch (error) {
                console.error('Erro:', error);
                containerEl.innerHTML = `
                    <div class="no-messages">
                        <h2>‚ùå Erro ao carregar mensagens</h2>
                        <p>${error.message}<br><br>Verifique sua conex√£o e tente novamente.</p>
                    </div>
                `;
                statusEl.textContent = '‚ùå Erro ao carregar';
                statusEl.className = 'status error';
            }
        }

        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                showToast();
            }).catch(err => {
                console.error('Erro ao copiar:', err);
                alert('Chat ID: ' + text);
            });
        }

        function showToast() {
            const toast = document.getElementById('toast');
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 2000);
        }

        // Carrega mensagens automaticamente ao abrir a p√°gina
        window.addEventListener('load', loadMessages);
    </script>
</body>
